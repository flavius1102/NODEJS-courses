<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Bejelentkezés</h1>
            <% include ./partials/messages %>
            <form action="/admin/login" method="POST">
                <div class="form-group">
                    <label for="name">Név</label>
                    <input
                            type="text"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Kérjem, írja be a nevét."
                    />
                </div>
                <div class="form-group">
                    <label for="password">Jelszó</label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Kérem, írja be a jelszavát."
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Bejelentkezés</button>
            </form>
            
        </div>
    </div>
</div>
